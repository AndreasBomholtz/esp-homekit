# Base flash address where persisted information (e.g. pairings) will be stored
HOMEKIT_SPI_FLASH_BASE_ADDR ?= 0x200000
# Maximum number of simultaneous clients allowed.
# Each connected client requires ~1100-1200 bytes of RAM.
HOMEKIT_MAX_CLIENTS ?= 16

EXTRA_WOLFSSL_CFLAGS = \
	-DWOLFCRYPT_HAVE_SRP \
	-DWOLFSSL_SHA512 \
	-DNO_MD5 \
	-DNO_SHA \
	-DHAVE_HKDF \
	-DHAVE_CHACHA \
	-DHAVE_POLY1305 \
	-DHAVE_ED25519 \
	-DHAVE_CURVE25519 \
	-DNO_SESSION_CACHE \
	-DRSA_LOW_MEM \
	-DGCM_SMALL \
	-DCURVE25519_SMALL \
	-DED25519_SMALL \
	-DUSE_SLOW_SHA512 \
	-DWOLFCRYPT_ONLY

CFLAGS += \
	-DESP_IDF \
	-DSPIFLASH_BASE_ADDR=$(HOMEKIT_SPI_FLASH_BASE_ADDR) \
	-DHOMEKIT_MAX_CLIENTS=$(HOMEKIT_MAX_CLIENTS) \
	$(EXTRA_WOLFSSL_CFLAGS)

ifeq ($(HOMEKIT_DEBUG),1)
CFLAGS += -DHOMEKIT_DEBUG
endif

ifeq ($(HOMEKIT_DEBUG_MDNS),1)
CFLAGS += -DHOMEKIT_DEBUG_MDNS
endif
